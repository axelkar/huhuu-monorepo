---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../config';

export interface Props {
	content: {
		title: string;
		description: string;
		published?: string;
		modified?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, published, modified, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE + ' | ' + title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
				<h1 class="title">{title}</h1>
				{published && <time>{new Date(published)
					.toLocaleDateString('en-us', {
					year: 'numeric',
					month: 'short',
					day: 'numeric',
					})}</time>}
				{
					modified && (
						<div>
							Last updated on <time>{new Date(modified)
								.toLocaleDateString('en-us', {
								year: 'numeric',
								month: 'short',
								day: 'numeric',
								})}</time>
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
